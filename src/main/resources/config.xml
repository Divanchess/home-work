<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="accountXmlConfig" class="com.sbrf.reboot.spring.beans.xml.AccountXml" scope="prototype">
        <constructor-arg name="accountNumber" value="AFFDDS43210"/>
        <constructor-arg name="client" ref="clientXmlConfig"/>
    </bean>

    <bean id="clientXmlConfig" class="com.sbrf.reboot.spring.beans.xml.ClientXml" scope="prototype">
        <property name="name" value="CLIENTNAME"/>
    </bean>

</beans>